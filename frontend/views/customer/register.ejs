<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Đăng ký - Bán đồ dùng học tập</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    body {
      background: linear-gradient(135deg, #e0f7fa 0%, #fff3e0 100%);
    }
    .form-container {
      background: white;
      border-radius: 1rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      padding: 2rem;
      max-width: 500px;
      margin: 2rem auto;
    }
    .form-container h2 {
      color: #1e40af;
      font-weight: 700;
      text-align: center;
      margin-bottom: 1.5rem;
    }
    .form-control:focus {
      border-color: #f97316;
      box-shadow: 0 0 0 0.2rem rgba(249, 115, 22, 0.25);
    }
    .btn-primary {
      background-color: #f97316;
      border: none;
      transition: background-color 0.3s ease;
    }
    .btn-primary:hover {
      background-color: #ea580c;
    }
    .error-message {
      color: #dc2626;
      font-size: 0.875rem;
      display: none;
      margin-top: 0.25rem;
    }
    .input-group-text {
      background-color: #e0f7fa;
      color: #1e40af;
    }
  </style>
</head>


<body>
<%- include('../partials/header') %>
  <div class="form-container">
    <h2>Đăng ký tài khoản</h2>
    <form id="registerForm" action="/registers" method="POST">
      <div class="mb-3">
        <label for="full_name" class="form-label text-gray-700">Họ và tên</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-user"></i></span>
          <input type="text" class="form-control" id="full_name" name="full_name" placeholder="Nhập họ và tên" required>
        </div>
        <div id="full_name_error" class="error-message">Họ và tên phải có ít nhất 3 ký tự</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label text-gray-700">Email</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-envelope"></i></span>
          <input type="email" class="form-control" id="email" name="email" placeholder="Nhập email" required>
        </div>
        <div id="email_error" class="error-message">Email không hợp lệ</div>
      </div>
      <div class="mb-3">
        <label for="phone" class="form-label text-gray-700">Số điện thoại</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-phone"></i></span>
          <input type="tel" class="form-control" id="phone" name="phone" placeholder="Nhập số điện thoại">
        </div>
        <div id="phone_error" class="error-message">Số điện thoại phải có 10-11 số</div>
      </div>
      <div class="mb-3">
        <label for="address" class="form-label text-gray-700">Địa chỉ</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
          <input type="text" class="form-control" id="address" name="address" placeholder="Nhập địa chỉ">
        </div>
        <div id="address_error" class="error-message">Địa chỉ phải có ít nhất 5 ký tự</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label text-gray-700">Mật khẩu</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-lock"></i></span>
          <input type="password" class="form-control" id="password" name="password" placeholder="Nhập mật khẩu" required>
        </div>
        <div id="password_error" class="error-message">Mật khẩu phải có ít nhất 6 ký tự</div>
      </div>
      <div class="mb-3">
        <label for="confirm_password" class="form-label text-gray-700">Xác nhận mật khẩu</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-lock"></i></span>
          <input type="password" class="form-control" id="confirm_password" name="confirm_password" placeholder="Xác nhận mật khẩu" required>
        </div>
        <div id="confirm_password_error" class="error-message">Mật khẩu xác nhận không khớp</div>
      </div>
      <button type="submit" class="btn btn-primary w-full py-2 mt-3">Đăng ký</button>
      <p class="text-center mt-3 text-gray-600">
        Đã có tài khoản? <a href="/login" class="text-blue-600 hover:underline">Đăng nhập</a>
      </p>
    </form>
  </div>

     <script src="/js/customer/register.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.getElementById('registerForm').addEventListener('submit', function (e) {
      e.preventDefault();
      let isValid = true;

      // Reset error messages
      document.querySelectorAll('.error-message').forEach(error => error.style.display = 'none');

      // Validate full_name
      const fullName = document.getElementById('full_name').value;
      if (fullName.length < 3) {
        document.getElementById('full_name_error').style.display = 'block';
        isValid = false;
      }

      // Validate email
      const email = document.getElementById('email').value;
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(email)) {
        document.getElementById('email_error').style.display = 'block';
        isValid = false;
      }

      // Validate phone (optional, but if provided, check format)
      const phone = document.getElementById('phone').value;
      if (phone && !/^\d{10,11}$/.test(phone)) {
        document.getElementById('phone_error').style.display = 'block';
        isValid = false;
      }

      // Validate address (optional, but if provided, check length)
      const address = document.getElementById('address').value;
      if (address && address.length < 5) {
        document.getElementById('address_error').style.display = 'block';
        isValid = false;
      }

      // Validate password
      const password = document.getElementById('password').value;
      if (password.length < 6) {
        document.getElementById('password_error').style.display = 'block';
        isValid = false;
      }

      // Validate confirm password
      const confirmPassword = document.getElementById('confirm_password').value;
      if (confirmPassword !== password) {
        document.getElementById('confirm_password_error').style.display = 'block';
        isValid = false;
      }

      if (isValid) {
        // Gửi form tới backend (khi có backend)
        console.log('Form valid, ready to submit');
        // this.submit(); // Bỏ comment khi có backend
      }
    });
  </script>

<%- include('../partials/footer') %>

</body>
</html>