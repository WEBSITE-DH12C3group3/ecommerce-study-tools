<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard | HocTapStore Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gray-100 font-sans">

  <!-- Header -->
  <%- include('../partials/admin_header', { title: 'Dashboard' }) %>

  <div class="flex pt-16"> <!-- pt-16 để tránh header fixed -->
    <!-- Sidebar -->
    <%- include('../partials/admin_sidebar') %>

    <!-- Main content -->
<main class="flex-1 ml-0 lg:ml-64 py-12 px-8 transition-all duration-300 w-full max-w-full">

  <!-- Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white p-6 rounded-xl shadow-md flex items-center space-x-4 h-32">
      <div class="bg-blue-100 p-4 rounded-full">
        <i class="fas fa-dollar-sign text-blue-600 text-2xl"></i>
      </div>
      <div>
        <p class="text-sm text-gray-500">Doanh thu</p>
        <p class="text-xl font-semibold text-gray-800">120,000,000đ</p>
      </div>
    </div>
    <div class="bg-white p-6 rounded-xl shadow-md flex items-center space-x-4 h-32">
      <div class="bg-green-100 p-4 rounded-full">
        <i class="fas fa-shopping-bag text-green-600 text-2xl"></i>
      </div>
      <div>
        <p class="text-sm text-gray-500">Đơn hàng</p>
        <p class="text-xl font-semibold text-gray-800">1,245</p>
      </div>
    </div>
    <div class="bg-white p-6 rounded-xl shadow-md flex items-center space-x-4 h-32">
      <div class="bg-purple-100 p-4 rounded-full">
        <i class="fas fa-box text-purple-600 text-2xl"></i>
      </div>
      <div>
        <p class="text-sm text-gray-500">Sản phẩm</p>
        <p class="text-xl font-semibold text-gray-800">320</p>
      </div>
    </div>
    <div class="bg-white p-6 rounded-xl shadow-md flex items-center space-x-4 h-32">
      <div class="bg-yellow-100 p-4 rounded-full">
        <i class="fas fa-users text-yellow-600 text-2xl"></i>
      </div>
      <div>
        <p class="text-sm text-gray-500">Khách hàng</p>
        <p class="text-xl font-semibold text-gray-800">540</p>
      </div>
    </div>
  </div>

  <!-- Charts -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <div class="bg-white p-6 rounded-xl shadow-md h-[350px]">
      <h2 class="text-lg font-semibold mb-4">Doanh thu theo tháng</h2>
      <canvas id="revenueChart" class="w-full h-full"></canvas>
    </div>
    <div class="bg-white p-6 rounded-xl shadow-md h-[350px]">
      <h2 class="text-lg font-semibold mb-4">Trạng thái đơn hàng</h2>
      <canvas id="orderChart" class="w-full h-full"></canvas>
    </div>
  </div>

  <!-- Tables -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <div class="bg-white p-6 rounded-xl shadow-md">
      <h2 class="text-lg font-semibold mb-4">Đơn hàng mới nhất</h2>
      <table class="w-full text-sm text-left">
        <thead class="bg-gray-100">
          <tr>
            <th class="px-3 py-2">Mã đơn</th>
            <th class="px-3 py-2">Khách hàng</th>
            <th class="px-3 py-2">Trạng thái</th>
            <th class="px-3 py-2">Tổng</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-t">
            <td class="px-3 py-2">#1001</td>
            <td class="px-3 py-2">Nguyễn Văn A</td>
            <td class="px-3 py-2 text-green-600">Hoàn tất</td>
            <td class="px-3 py-2">1,200,000đ</td>
          </tr>
          <tr class="border-t">
            <td class="px-3 py-2">#1002</td>
            <td class="px-3 py-2">Trần Thị B</td>
            <td class="px-3 py-2 text-yellow-600">Đang xử lý</td>
            <td class="px-3 py-2">850,000đ</td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="bg-white p-6 rounded-xl shadow-md">
      <h2 class="text-lg font-semibold mb-4">Người dùng mới</h2>
      <ul class="space-y-3">
        <li class="flex items-center justify-between">
          <span>Phạm Minh C</span>
          <span class="text-gray-500 text-sm">2 giờ trước</span>
        </li>
        <li class="flex items-center justify-between">
          <span>Lê Văn D</span>
          <span class="text-gray-500 text-sm">Hôm qua</span>
        </li>
      </ul>
    </div>
  </div>
</main>


  </div>

  <!-- Chart Scripts -->
  <script>
    // Chart Revenue
    new Chart(document.getElementById('revenueChart'), {
      type: 'line',
      data: {
        labels: ["Th1","Th2","Th3","Th4","Th5","Th6"],
        datasets: [{
          label: "Doanh thu (triệu VND)",
          data: [12,19,15,25,22,30],
          borderColor: "#3b82f6",
          backgroundColor: "rgba(59,130,246,0.2)",
          fill: true,
          tension: 0.3
        }]
      }
    });

    // Chart Orders
    new Chart(document.getElementById('orderChart'), {
      type: 'doughnut',
      data: {
        labels: ["Hoàn tất", "Đang xử lý", "Hủy"],
        datasets: [{
          data: [60, 25, 15],
          backgroundColor: ["#10b981","#f59e0b","#ef4444"]
        }]
      }
    });
  </script>
</body>
</html>
