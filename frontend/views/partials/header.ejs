<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>HocTapStore</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-white font-sans">
  <header class="sticky top-0 bg-gradient-to-r from-blue-100 to-pink-100 shadow-lg z-50 animate__animated animate__fadeInDown">
    <div class="container mx-auto px-4 py-4 flex items-center justify-between">
        <!-- Logo -->
        <a href="/" class="text-3xl font-bold text-blue-600 hover:text-blue-700 transition-colors duration-300 flex items-center">
            <img src="https://via.placeholder.com/40?text=Logo" alt="HocTapStore Logo" class="w-10 h-10 mr-2">
            HocTapStore
        </a>
        
        <!-- Navigation -->
        <nav class="hidden md:flex space-x-8">
            <a href="/" class="text-gray-800 hover:text-blue-600 font-medium transition-colors duration-300 relative group">
                Trang chủ
                <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-blue-600 group-hover:w-full transition-all duration-300"></span>
            </a>
            <div class="relative group">
                <a href="/categories" class="text-gray-800 hover:text-blue-600 font-medium transition-colors duration-300 relative group">
                    Danh mục
                    <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-blue-600 group-hover:w-full transition-all duration-300"></span>
                </a>
                <div id="header-category-dropdown" class="absolute hidden group-hover:block bg-white shadow-lg rounded-lg mt-2 w-48 z-50 max-h-60 overflow-y-auto">
                    <ul class="py-2" id="header-category-list"></ul>
                </div>
            </div>
            <a href="/promotions" class="text-gray-800 hover:text-blue-600 font-medium transition-colors duration-300 relative group">
                Khuyến mãi
                <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-blue-600 group-hover:w-full transition-all duration-300"></span>
            </a>
            <a href="/about" class="text-gray-800 hover:text-blue-600 font-medium transition-colors duration-300 relative group">
                Về chúng tôi
                <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-blue-600 group-hover:w-full transition-all duration-300"></span>
            </a>
            <a href="/contact" class="text-gray-800 hover:text-blue-600 font-medium transition-colors duration-300 relative group">
                Liên hệ
                <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-blue-600 group-hover:w-full transition-all duration-300"></span>
            </a>
        </nav>
        
        <!-- Search and Icons -->
        <div class="flex items-center space-x-4">
            <!-- Search Bar -->
            <div class="relative">
                <input type="search" placeholder="Tìm kiếm sản phẩm..." class="px-4 py-2 pl-10 border rounded-full focus:outline-none focus:ring-2 focus:ring-blue-400 bg-white shadow-sm w-48 md:w-64 transition-all duration-300">
                <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
            </div>
            <!-- Cart -->
            <a href="/cart" class="relative group">
                <svg class="w-6 h-6 text-gray-700 group-hover:text-blue-600 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
                <span class="absolute top-0 right-0 bg-red-500 text-white text-xs rounded-full px-2 py-0.5 transform translate-x-1/2 -translate-y-1/2 animate__animated animate__pulse animate__infinite"></span>
            </a>
            <!-- Account Dropdown -->
            <div class="relative">
              <button id="accountDropdownBtn" class="flex items-center gap-2 text-gray-700 hover:text-blue-600 transition-colors duration-300 bg-white hover:bg-blue-50 border border-gray-300 rounded-lg px-4 py-2 shadow-sm hover:shadow-md">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                <% if (session.user) { %>
                  <%= session.user.full_name && session.user.full_name.length > 10 
                      ? session.user.full_name.substring(0, 10) + "..." 
                      : session.user.full_name || "Tài khoản" %>
                <% } else { %>
                  Tài khoản
                <% } %>
              </button>
              <ul id="accountDropdownMenu" class="hidden absolute right-0 mt-2 rounded-lg shadow-lg bg-white border border-gray-200 w-48">
                <% if (session.user) { %>
                  <li><a class="block px-4 py-2 hover:bg-blue-100 hover:text-blue-600 flex items-center gap-2" href="/personal">
                    <i class="fa-regular fa-address-card"></i> Trang cá nhân</a></li>
                  <% if (session.user.role_id !== 3) { %>
                    <li><a class="block px-4 py-2 hover:bg-blue-100 hover:text-blue-600 flex items-center gap-2" href="/admin">
                      <i class="fa-solid fa-gauge"></i> Quản lý</a></li>
                  <% } %>
                  <li><a class="block px-4 py-2 hover:bg-blue-100 hover:text-blue-600 flex items-center gap-2" href="/api/logout">
                    <i class="fa-solid fa-arrow-right-from-bracket"></i> Đăng xuất</a></li>
                <% } else { %>
                  <li><a class="block px-4 py-2 hover:bg-blue-100 hover:text-blue-600 flex items-center gap-2" href="/register">
                    <i class="fa-regular fa-pen-to-square"></i> Đăng ký</a></li>
                  <li><a class="block px-4 py-2 hover:bg-blue-100 hover:text-blue-600 flex items-center gap-2" href="/login">
                    <i class="fa-solid fa-right-to-bracket"></i> Đăng nhập</a></li>
                <% } %>
              </ul>
            </div>

            <!-- Hamburger Menu for Mobile -->
            <button class="md:hidden text-gray-700 hover:text-blue-600 focus:outline-none" onclick="toggleMenu()">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"/></svg>
            </button>
        </div>
    </div>
    <!-- Mobile Menu -->
    <nav id="mobile-menu" class="hidden md:hidden bg-white shadow-md">
        <div class="container mx-auto px-4 py-4 flex flex-col space-y-4">
            <a href="/" class="text-gray-800 hover:text-blue-600 font-medium">Trang chủ</a>
            <div class="relative">
                <a href="/categories" class="text-gray-800 hover:text-blue-600 font-medium" onclick="toggleCategories(event)">
                    Danh mục
                </a>
                <div id="mobile-header-category-dropdown" class="hidden mt-2 bg-white shadow-lg rounded-lg w-full">
                    <ul class="py-2" id="mobile-header-category-list"></ul>
                </div>
            </div>
            <a href="/promotions" class="text-gray-800 hover:text-blue-600 font-medium">Khuyến mãi</a>
            <a href="/about" class="text-gray-800 hover:text-blue-600 font-medium">Về chúng tôi</a>
            <a href="/contact" class="text-gray-800 hover:text-blue-600 font-medium">Liên hệ</a>
        </div>
    </nav>
</header>

<script>
    // Toggle mobile menu
    function toggleMenu() {
        const menu = document.getElementById('mobile-menu');
        menu.classList.toggle('hidden');
    }

    // Toggle mobile categories
    function toggleCategories(event) {
        event.preventDefault();
        const menu = document.getElementById('mobile-header-category-dropdown');
        menu.classList.toggle('hidden');
    }

    // Toggle account dropdown
    document.addEventListener("DOMContentLoaded", () => {
      const btn = document.getElementById("accountDropdownBtn");
      const menu = document.getElementById("accountDropdownMenu");
      btn.addEventListener("click", (e) => {
        e.preventDefault();
        menu.classList.toggle("hidden");
      });
      // Ẩn khi click ngoài
      document.addEventListener("click", (event) => {
        if (!btn.contains(event.target) && !menu.contains(event.target)) {
          menu.classList.add("hidden");
        }
      });
    });

    // Fetch categories
    document.addEventListener('DOMContentLoaded', function() {
        const headerCategoryList = document.getElementById('header-category-list');
        const mobileHeaderCategoryList = document.getElementById('mobile-header-category-list');
        const dropdown = document.getElementById('header-category-dropdown');

        fetch('/api/customer/categories')
            .then(response => {
                if (!response.ok) throw new Error('Lỗi khi lấy danh sách danh mục');
                return response.json();
            })
            .then(categories => {
                if (categories && categories.length > 0) {
                    headerCategoryList.innerHTML = categories.map(category => `
                        <li>
                            <a href="/categories/${category.category_id}" class="block px-4 py-2 text-gray-800 hover:bg-blue-100 hover:text-blue-600 transition-colors duration-200">${category.category_name}</a>
                        </li>
                    `).join('');
                    mobileHeaderCategoryList.innerHTML = categories.map(category => `
                        <li>
                            <a href="/categories/${category.category_id}" class="block px-4 py-2 text-gray-800 hover:bg-blue-100 hover:text-blue-600 transition-colors duration-200">${category.category_name}</a>
                        </li>
                    `).join('');
                } else {
                    headerCategoryList.innerHTML = '<li class="px-4 py-2 text-gray-500">Không có danh mục</li>';
                    mobileHeaderCategoryList.innerHTML = '<li class="px-4 py-2 text-gray-500">Không có danh mục</li>';
                }
            })
            .catch(error => {
                console.error('Error fetching categories:', error);
                headerCategoryList.innerHTML = '<li class="px-4 py-2 text-gray-500">Lỗi khi tải danh mục</li>';
                mobileHeaderCategoryList.innerHTML = '<li class="px-4 py-2 text-gray-500">Lỗi khi tải danh mục</li>';
            });

        // Thêm scroll nếu danh mục nhiều
        dropdown.addEventListener('mouseenter', () => {
            if (headerCategoryList.children.length > 8) {
                dropdown.classList.add('max-h-60', 'overflow-y-auto');
            }
        });
        dropdown.addEventListener('mouseleave', () => {
            dropdown.classList.remove('max-h-60', 'overflow-y-auto');
        });
    });
</script>
</body>
</html>
