      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <span class="nav-link text-white">
              <i class="fas fa-user me-1"></i> <%= session.user.full_name %>
